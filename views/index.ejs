        <ul class="navbar-nav">
          <% if (loggedInUser) { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link active" href="/login/1">Login</a>
              </li>

              <% } %>
        </ul>

      </div>
    </div>
  </nav>


  <header class="p-5">
    <form id="todoForm">
      <div class="mb-3">
        <label for="todoInput" class="form-label">Enter Todo:</label>
        <input name="text" type="text" class="form-control" id="todoInput" aria-describedby="todoInput" placeholder="Enter something ðŸ˜Š">
      </div>
    </form>
  </header>

  <main class="px-5">
    <%- include('./partials/items') %>
  </main>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
